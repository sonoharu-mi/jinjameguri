<h1>プロフィール編集</h1>

<%= form_with model: @user do |f| %>
  <label for="inputName">名前</label><br>
  <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前"%><br>
  <label for="inputIntroduction">自己紹介文</label><br>
  <%= f.text_area :introduction %> <br>
  <label for="inputImage">プロフィール画像</label><br>
  <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %><br>
  <%= f.submit "編集を保存" %>
<% end %>

<% if @user == current_user %>
  <%= link_to "退会", user_path(@user), method: :delete, "data-confirm" => "本当に退会しますか？", class: "btn btn-outline-danger" %>
<% end %>

<%= link_to "戻る", mypage_path %>