<h2><%= @group.name %></h2>
<p class="text-muted">作成者：<%= @group.owner.name %></p>
<div class="mt-3">
  <h4>紹介文</h4>
  <p><%= simple_format(@group.introduction) %></p>
</div>

<div class="row">
  <div class="col-md-3">
    <% if @group.respond_to?(:users) && @group.users.any? %>
      <div class="mt-4">
        <h4>メンバー一覧</h4>
        <ul>
          <% @group.users.each do |user| %>
            <li><%= user.name %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
  </div>

  

</div>

<div class="mt-3">
  <%= link_to "グループ一覧に戻る", groups_path %>
</div>