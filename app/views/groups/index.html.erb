<h1>グループ一覧</h1>
<div class="row">
  <div class="col-md-4">
    <%= form_with model: @group, url: groups_path do |f| %>
      <div>
        <%= f.label :name, "グループ名" %> <br>
        <%= f.text_field :name, class: "form-controller" %>
      </div>
      <div>
        <%= f.label :introduction, "グループ名" %> <br>
        <%= f.text_area :introduction, class: "form-control" %>
      </div>
      <div class="mt-2">
        <%= f.submit "グループを作成", class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>

  <div class="col-md-7 offset-md-1">
    <div class="group-list">
      <% @groups.each do |group| %>
        <h3><%= link_to group.name, group_path(group) %></h3>
        <p><%= group.introduction %></p>
        <p>作成者：<%= group.owner.name %></p>
      <% end %>
    </div>
  </div>
</div>

