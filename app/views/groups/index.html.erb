<h1 class="mt-3">ぶらり参拝会</h1>
<div class="row mt-5">
  <div class="col-md-4 pt-3">
    <% if current_user&.guest_user? %>
      <h5 class="">ゲストユーザーはグループ作成できません</h5>
    <% else %>
      <%= form_with model: @group, url: groups_path do |f| %>
        <div>
          <%= f.file_field :image, accept: "image/*", class: "mt-2" %>
        </div>
        <div>
          <%= f.label :name, "グループ名", placeholder: "1~20文字以内", class: "mt-4" %> <br>
          <%= f.text_field :name, class: "form-control" %>
        </div>
        <div>
          <%= f.label :introduction, "紹介文", class: "mt-4" %> <br>
          <%= f.text_area :introduction, class: "form-control" %>
        </div>
        <div class="mt-2">
          <%= f.submit "グループを作成", class: "btn btn-primary mt-4" %>
        </div>
      <% end %>
    <% end %>
  </div>

  <div class="col-md-7 offset-md-1 pt-3">
    <%= render "searches/form" %>
    <%= render "groups/groups", groups: @groups %>
  </div>
</div>

