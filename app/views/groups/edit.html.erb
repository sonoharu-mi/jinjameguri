<h2 class="mt-3">グループ編集</h2>
<div class="row pl-3 mt-3">
  <%= form_with model: @group do |f| %>
    <div>
      <%= f.file_field :image, accept: "image/*", class: "mt-2" %>
    </div>
    <div>
      <%= f.label :name, "グループ名", class: "mt-4" %> <br>
      <%= f.text_field :name, class: "form-control" %>
    </div>
    <div>
      <%= f.label :introduction, "紹介文", class: "mt-4" %> <br>
      <%= f.text_area :introduction, class: "form-control" %>
    </div>
    <div class="mt-2">
      <%= f.submit "グループを編集", class: "btn btn-primary mt-4" %>
    </div>
  <% end %>
</div>