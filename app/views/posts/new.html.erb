
<h1>神社の投稿をしよう！</h1>

<% if @post.errors.any? %>
  <%= @post.errors.count %>件のエラーが発生しました
  <ul>
    <% @post.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>


<%= form_with model: @post do |f| %>

  <h4>写真</h4>
  <%= f.file_field :image, accept: "image/*", required: false %>
  <h4>神社の名前</h4>
  <%= f.text_field :shirine_name %>
  <h4>住所</h4>
  <%= f.text_area :address %>
  <h4>本文</h4>
  <%= f.text_area :body %></br>
  
  <h4>駐車場の有無</h4>
  <%= f.radio_button :parking, Post.parkings.key(0),id: "post_parking_0" %>
  <%= f.label :parking, Post.parkings_i18n[:unavailable], value: Post.parkings.key(0), for: "post_parking_0" %>
  <%= f.radio_button :parking, Post.parkings.key(1) %>
  <%= f.label :parking, Post.parkings_i18n[:available], value: Post.parkings.key(1) %></br>
  <h4>御朱印の有無</h4>
  <%= f.radio_button :shirine_stamp, Post.shirine_stamps.key(0) %>
  <%= f.label :shirine_stamp, Post.shirine_stamps_i18n[:no_stamp], value: Post.shirine_stamps.key(0) %>
  <%= f.radio_button :shirine_stamp, Post.shirine_stamps.key(1) %>
  <%= f.label :shirine_stamp, Post.shirine_stamps_i18n[:has_stamp], value: Post.shirine_stamps.key(1) %></br>
  <h4>季節限定の御朱印</h4>
  <%= f.select :seasonal_stamp, options_for_select(Post.seasonal_stamps_i18n.invert) %>
  
  <%= f.submit '投稿' %>
<% end %>

<%= link_to "戻る", posts_path %> 