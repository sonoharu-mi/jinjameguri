<div class="row">
  <div class="col-md-4">
    <h1>投稿一覧</h1>
    <%= render "searches/form" %>
    <br>
    <% @posts.each do |post| %>
      <%= link_to post_path(post) do %>
        <%= image_tag post.get_image(300,300) %>
      <% end %>
      <table class="table table-hover">
        <tr>
          <th>
            <%= post.shirine_name %>
          </th>
          <th><%= link_to "#{post.post_comments.count} コメント", post_path(post.id) %></th>
        </tr>
        <tr>
          <th>
            <%= post.body %>
          </th>
          <th></th>
        </tr>
        <tr>
          <th>
            <%= post.parking_i18n %>
          </th>
          <th>
            <%= post.shirine_stamp_i18n %>
          </th>
        </tr>
        <tr>
          <th>
            <%= link_to user_path(post.user_id) do %>
              <%= image_tag post.user.get_profile_image(100,100) %>
            <% end %>
          </th>
          <th>
            <%= post.user.name %>
          </th>
        </tr>
      </table>
    <% end %>
  </div>

  <div class="col-md-7 offset-md-1">
    <h1>地図</h1>
  </div>
</div>