<h1>投稿一覧</h1>

<% @posts.each do |post| %>
  <%= link_to post_path(post) do %>
    <%= image_tag post.get_image(500,500) %>
  <% end %>
  <table>
    <tr>
      <th>
        <%= post.shirine_name %>
      </th>
    </tr>
    <tr>
      <th>
        <%= post.body %>
      </th>
    </tr>
    <tr>
      <th>
        <%= post.parking_i18n %>
      </th>
    </tr>
    <tr>
      <th>
        <%= link_to user_path(post.user_id) do %>
          <%= image_tag post.user.get_profile_image(100,100) %>
        <% end %>
      </th>
      <th>
        <%= post.user.name %>
      </th>
    </tr>
  </table>
<% end %>

<%= paginate posts %> 
