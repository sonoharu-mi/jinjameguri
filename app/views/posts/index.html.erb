<div class="row">
  <div class="col-md-7">
    <h1>地図</h1>
    <div class="mt-3">
      <div id="map" style="width:100%; height:60vh; position:sticky; top:0;"></div>
    </div>
  </div>
  
  <div class="col-md-5" style="height:100vh; overflow-y:auto; position:relative;">
    <div style="position:sticky; top:0; background:white; z-index:10; padding-top:10px; padding-bottom:10px;">
      <div class="sticky-top bg-white p-2 shadow-sm">
        <h1>投稿一覧</h1>
        <%= render "searches/form" %>
        <br>
        <div class="pagination-wrapper text-center">
          <%= paginate @posts %>
        </div>
      </div>
    </div>
    <div class="text-truncate">
      <%= render "posts/posts", posts: @posts %>
    </div>
  </div>
</div>

<%= javascript_pack_tag 'map_index', 'data-turbolinks-track': 'reload' %>

