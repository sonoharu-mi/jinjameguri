<h1>参拝記</h1>

<table>
  <thead>
    <tr>
      <th>
        <%= link_to user_path(@user) do %>
          <%= image_tag @user.get_profile_image(100,100) %>
        <% end %>
      </th>
      <th>
        <%= link_to @post.user.name, user_path(@user.id) %>
      </th>
      <% if @post.user == current_user %>
        <th><%= link_to "削除", post_path(@post), method: :delete, "data-confirm" => "本当に削除しますか？" %></th>
      <% end %>
    </tr>
    <tr>
      <th>
      <%= @post.shirine_name %>
      </th>
    </tr>
    <tr>
      <th>
        <%= @post.body %>
      </th>
    </tr>
    <tr>
      <th>
        <%= @post.parking_i18n %>
      </th>
    </tr>
    <tr>
      <th>
        <%= @post.shirine_stamp_i18n %>
      </th>
    </tr>
    <tr>
      <th>
        <%= @post.seasonal_stamp_i18n %>
      </th>
    </tr>
    <tr>
      <th>
        <p>参拝日：<%= @post.created_at.strftime('%Y/%m/%d') %></p>
      </th>
    </tr>
  </thead>
</table>
<%= image_tag @post.get_image(500,500) %><br>

<%= link_to "一覧へ戻る", posts_path %> | 
<% if @post.user == current_user %>
  <%= link_to "参拝記録を編集", edit_post_path %>
<% end %>