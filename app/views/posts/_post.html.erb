<table class="table">
  <thead>
    <tr>
      <th></th>
      <th>神社名</th>
      <th>記録</th>
      <th></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td>
        <%= link_to post_path(post.user_id) do %>
          <%= image_tag post.get_image(200,200) %>
        <% end %>
      </td>
      <td>
        <%= post.shirine_name %>
      </td>
      <td>
        <%= post.body %>
      </td>
      <td><%= post.parking_i18n %></td>
      <td><%= post.shirine_stamp_i18n %></td>
    </tr>
    <tr>
      <td><p><%= link_to "#{post.post_comments.count} コメント", post_path(post.id) %></p></td>
    </tr>
  </tbody>
</table>

