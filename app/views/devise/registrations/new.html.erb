<div class="row no-gutters">
  <div class="col-md-5 col-sm-10 mx-2 mx-sm-auto text-center shadow-lg rounded px-0 my-5">
    <h2 class="text-dark bg-light py-4 mb-0">新規登録</h2>
    <div class="form-body p-4">
      <%= form_with model: @user, url: user_registration_path do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
        <div class="input-group mb-3">
          <div class="input-group-prepend">
            <span class="input-group-text" aria-hidden="true"><i class="fas fa-user"></i></span>
          </div>
          
          <%= f.text_field :name, autofocus: true, class: "form-control", placeholder: "ユーザー名", autocomplete: "name" %>
        </div>
        <div class="input-group mb-3">
          <div class="input-group-prepend">
            <span class="input-group-text" aria-hidden="true"><i class="fas fa-envelope"></i></span>
          </div>
          
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "Eメール" %>
        </div>

        <div class="input-group mb-3">
          <div class="input-group-prepend">
            <span class="input-group-text" aria-hidden="true"><i class="fas fa-lock"></i></span>
          </div>
          
          
          <%= f.password_field :password, autocomplete: "new-password", class: "form-control", placeholder: "６文字以上のパスワード" %>
        </div>

        
        <div class="input-group mb-3">
          <div class="input-group-prepend">
            <span class="input-group-text" aria-hidden="true"><i class="fa-solid fa-unlock"></i></span>
          </div>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", placeholder: "再パスワード" %>
        </div>

        <div class="actions">
          <%= f.submit "はじめる", class: "btn btn-block btn-outline-success mt-5 mb-1" %>
        </div>
      <% end %>
    

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
