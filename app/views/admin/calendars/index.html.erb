<h1>カレンダー管理</h1>

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>ID</th>
      <th>行事名</th>
      <th>都道府県</th>
      <th>市区町村</th>
      <th>開始日</th>
      <th>終了日</th>
      <th>操作</th>
    </tr>
  </thead>
  <tbody>
    <% @calendars.each do |calendar| %>
      <tr>
        <td><%= calendar.id %></td>
        <td><%= calendar.event %></td>
        <td><%= calendar.prefecture %></td>
        <td><%= calendar.city %></td>
        <td><%= calendar.start_date %></td>
        <td><%= calendar.end_date %></td>
        <td><%= button_to "削除", admin_calendar_path(calendar), method: :delete, data: { confirm: "本当に削除しますか？" }, class: "btn btn-outline-danger btn-sm" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to "戻る", admin_dashboards_path, class: "text-secondary link link-opacity-50-hover mt-3" %> 


<%= javascript_pack_tag 'application' %>
