<h2>コメント一覧</h2>
<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th></th>
      <th>名前</th>
      <th>コメント</th>
    </tr>
  </thead>
  <tbody>
    <% @post_comments.each do |post_comment| %>
      <tr>
        <td><%= image_tag post_comment.user.get_profile_image(80,80) %></td>
        <td><%= post_comment.user.name %></td>
        <td><%= post_comment.comment %></td>
        <td><%= post_comment.created_at.strftime('%Y/%m/%d') %></td>
        <td><%= link_to '削除',admin_post_comment_path(post_comment), method: :delete, data: { confirm: '本当に削除しますか？'}, class: "btn btn-outline-danger btn-sm" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= link_to "戻る", admin_dashboards_path, class: "text-secondary link link-opacity-50-hover mt-3" %> 