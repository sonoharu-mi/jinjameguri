<div class="row no-gutters">
  <div class="col-md-5 col-sm-10 mx-2 mx-sm-auto text-center shadow-lg rounded px-0 my-5">
    <h2 class="text-light bg-dark py-4 mb-0">管理者ログイン</h2>
    <div class="form-body p-4">
      <%= form_with model: @admin, url: session_path(resource_name), local: true do |f| %>
        <div class="input-group mb-3">
          <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Eメール", class: "form-control" %>
        </div>

        <div class="input-group mb-3">
          <%= f.password_field :password, autocomplete: "current-password", placeholder: "パスワード", class: "form-control" %>
        </div>

        <div class="actions">
          <%= f.submit "ログイン", class: "btn btn-block btn-outline-secondary mt-5" %>
        </div>
      <% end %>

      <%= render "admin/shared/links" %>
    </div>
  </div>
</div>